<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:9.4 http://www.infinispan.org/schemas/infinispan-config-9.4.xsd"
    xmlns="urn:infinispan:config:9.4">

    <jgroups>
         <stack-file name="ems-jgroups" path="ems-jgroups-udp.xml"/>
    </jgroups>

    <cache-container name="ems-model" statistics="false" shutdown-hook="DONT_REGISTER">
    	 	
        <transport stack="ems-jgroups"  cluster="EMS"/>
        <jmx duplicate-domains="true"/>

        <!-- *************************************** -->
        <!--     Default cache used as template      -->
        <!-- *************************************** -->
        <!-- <replicated-cache name="DEFAULT" mode="SYNC" statistics="false" statistics-available="false">
            <locking isolation="REPEATABLE_READ"/>
            <transaction mode="BATCH" locking="PESSIMISTIC"/>
			<expiration interval="-1"/>
            <persistence>
				<file-store fetch-state="true" preload="true" path="/var/opt/OC/hpoc-ems/wildfly/server/ems/infinispan${emsImVersionDir}"/>
			</persistence>
            <state-transfer timeout="480000"/>
        </replicated-cache> -->
        
        <serialization marshaller="com.hello.MyMarshaller" version="1.0"/>
      
   
      
        <local-cache-configuration name="OGM-template">
            <transaction mode="NON_XA"/>
			<expiration interval="10000"/>
            <persistence>
				<file-store fetch-state="true" preload="true" path="/root/infinispan"/>
			</persistence>
            <!--  <state-transfer timeout="480000"/>-->
        </local-cache-configuration>
        
        

        <!-- *************************************** -->
        <!--     Cache to store the OGM entities     -->
        <!-- *************************************** -->
        <local-cache name="ENTITIES" configuration="OGM-template"/>

        <!-- *********************************************** -->
        <!--   Cache to store the relations across entities  -->
        <!-- *********************************************** -->
        <local-cache name="ASSOCIATIONS" configuration="OGM-template"/>

        <!-- ***************************** -->
        <!--   Cache to store identifiers  -->
        <!-- ***************************** -->
        <local-cache name="IDENTIFIERS" configuration="OGM-template"/>

    </cache-container>
</infinispan>
